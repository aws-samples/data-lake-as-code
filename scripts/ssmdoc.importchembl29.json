{
   "schemaVersion":"2.2",
   "description":"Downloads and installs chembl 29 onto RDS instance",
   "parameters":{
        "databaseSecretArn": {
          "type": "String",
          "description": "Secret Arn of Database Connection Creds"
        },
        "databaseHostName": {
          "type": "String",
          "description": "Hostname of the database server"
        },
        "executionTimeout": {
          "type": "String",
          "default": "7200",
          "description": "(Optional) The time in seconds for a command to complete before it is considered to have failed. Default is 3600 (1 hour). Maximum is 172800 (48 hours).",
          "allowedPattern": "([1-9][0-9]{0,3})|(1[0-9]{1,4})|(2[0-7][0-9]{1,3})|(28[0-7][0-9]{1,2})|(28800)"
        }

    },
    "mainSteps":[
      {
        "action":"aws:runShellScript",
        "name":"DownloadAndImportChembl29intoDatabase",
        "inputs":{
            "timeoutSeconds": "{{ executionTimeout }}",
            "runCommand": [
                "sudo yum install jq -y",
                "currentRegion=$(curl -s http://169.254.169.254/latest/dynamic/instance-identity/document|jq -r .region)",
                "secretPayload=$(aws secretsmanager get-secret-value --secret-id {{databaseSecretArn}} --query SecretString --region $currentRegion)",
                "echo $secretPayload | jq -rc '.' > dbsecrets.json",
                "dbPw=$(jq -r '.password' dbsecrets.json)",
                "dbUn=$(jq -r '.username' dbsecrets.json)",
                "chembl29HostName='{{databaseHostName}}'",
                "mkdir -p /home/ssm-user/",
                "touch /home/ssm-user/progressLogChembl29",
                "echo 'Starting chembl download...' >> /home/ssm-user/progressLogChembl29",
                "wget ftp://ftp.ebi.ac.uk/pub/databases/chembl/ChEMBLdb/releases/chembl_29/chembl_29_postgresql.tar.gz -P chembl/sourceExports/ChEMBLdb/releases/chembl_29/ >> /home/ssm-user/progressLogChembl29 2>/home/ssm-user/progressLogChembl29",
                "tar -xvzf chembl/sourceExports/ChEMBLdb/releases/chembl_29/chembl_29_postgresql.tar.gz -C chembl/sourceExports/ChEMBLdb/releases/chembl_29/ >> /home/ssm-user/progressLogChembl29",
                "sudo amazon-linux-extras enable postgresql11", 
                "sudo yum clean metadata", 
                "sudo yum install postgresql -y >> /home/ssm-user/progressLogChembl29",
                "touch ~/.pgpass",
                "chmod 0600 ~/.pgpass",
                "escapedDbPw=$(echo $dbPw | sed 's|:|\\\\:|g')",
                "echo $chembl29HostName:5432:*:$dbUn:$escapedDbPw >> ~/.pgpass",
                "dropdb --if-exists -h $chembl29HostName --username=$dbUn chembl_29 >> /home/ssm-user/progressLogChemblDrop29 2>/home/ssm-user/progressLogChemblDrop29",
                "createdb -h $chembl29HostName --username=$dbUn chembl_29",
                "createuser -h $chembl29HostName --username=$dbUn user",
                "pg_restore -v -h $chembl29HostName -p 5432 -U $dbUn -d chembl_29 chembl/sourceExports/ChEMBLdb/releases/chembl_29/chembl_29_postgresql/chembl_29_postgresql.dmp >> /home/ssm-user/progressLogChembl29 2>/home/ssm-user/progressLogChembl29",
                "psql -h $chembl29HostName -p 5432 -U $dbUn -d chembl_29 -c 'alter table activities ALTER COLUMN value TYPE varchar(100), ALTER COLUMN standard_value TYPE varchar(100), ALTER COLUMN upper_value TYPE varchar(100), ALTER COLUMN standard_upper_value TYPE varchar(100);'"
                
            ]
         }
      }
   ]
}